<div class="p-2">
  <div
    id="d3-container"
    class="w-full active:cursor-grabbing overflow-hidden relative">
    <div id="graph-loader" class="absolute inset-0 flex items-center justify-center text-orange-500 font-mono text-xs">
      LOADING_SEMANTIC_NETWORK...
    </div>
    <svg id="research-svg" class="w-full h-[400px]"></svg>
  </div>
</div>

<script>
  import * as d3 from 'd3';

  async function initGraph() {
    const container = document.getElementById('d3-container');
    const svgElement = document.getElementById('research-svg') as unknown as SVGSVGElement;
    const loader = document.getElementById('graph-loader');

    if (!container || !svgElement) return;

    const url = "https://raw.githubusercontent.com/CynicDog/cynicdog.github.io/refs/heads/main/public/graph.json";
    let data;
    try {
      const response = await fetch(url);
      data = await response.json();
      if (loader) loader.style.display = 'none';
    } catch (e) {
      console.error("Failed to load graph data", e);
      if (loader) loader.innerText = "ERROR_LOADING_DATA";
      return;
    }

    const width = container.clientWidth;
    const height = 360;
    const margin = 15;
    const xLimit = width / 2 - margin;
    const yLimit = height / 2 - margin;

    const color = d3.scaleOrdinal(d3.schemeTableau10);

    const svg = d3.select(svgElement)
      .attr("viewBox", [-width / 2, -height / 2, width, height]);

    svg.selectAll("*").remove();

    const simulation = d3.forceSimulation(data.nodes)
      .force("link", d3.forceLink(data.links).id((d: any) => d.id).distance(100))
      .force("charge", d3.forceManyBody().strength(-700))
      .force("x", d3.forceX())
      .force("y", d3.forceY());

    const link = svg.append("g")
      .attr("stroke", "#f59e0b")
      .attr("stroke-opacity", 0.3)
      .selectAll("line")
      .data(data.links)
      .join("line")
      .attr("stroke-width", (d: any) => d.value * 3);

    const node = svg.append("g")
      .selectAll("g")
      .data(data.nodes)
      .join("g")
      .attr("class", "node-group cursor-pointer")
      .on("click", (event, d: any) => {
         window.location.href = `/posts/${d.id}`;
      });;

    node.append("circle")
      .attr("r", (d: any) => d.metrics.radius * 2)
      .attr("fill", (d: any) => color(d.group))
      .attr("fill-opacity", (d: any) => 0.4 + (d.metrics.date_score * 0.6))
      .attr("stroke", (d: any) => color(d.group))
      .attr("stroke-width", 1.5);

    node.append("text")
      .text((d: any) => d.id)
      .attr("dy", (d: any) => d.metrics.radius * 2 + 12)
      .attr("text-anchor", "middle")
      .attr("fill", "#94a3b8")
      .attr("font-size", "10px")
      .attr("font-family", "monospace")
      .attr("pointer-events", "none");

    node.call(
      d3.drag<any, any>()
        .on("start", (event) => {
          if (!event.active) simulation.alphaTarget(0.3).restart();
          event.subject.fx = event.subject.x;
          event.subject.fy = event.subject.y;
        })
        .on("drag", (event) => {
          event.subject.fx = Math.max(-xLimit, Math.min(xLimit, event.x));
          event.subject.fy = Math.max(-yLimit, Math.min(yLimit, event.y));
        })
        .on("end", (event) => {
          if (!event.active) simulation.alphaTarget(0);
          event.subject.fx = null;
          event.subject.fy = null;
        })
    );

    simulation.on("tick", () => {
      link
        .attr("x1", (d: any) => d.source.x)
        .attr("y1", (d: any) => d.source.y)
        .attr("x2", (d: any) => d.target.x)
        .attr("y2", (d: any) => d.target.y);

      node.attr("transform", (d: any) => {
        d.x = Math.max(-xLimit, Math.min(xLimit, d.x));
        d.y = Math.max(-yLimit, Math.min(yLimit, d.y));
        return `translate(${d.x},${d.y})`;
      });
    });
  }

  document.addEventListener("astro:page-load", initGraph);
  window.addEventListener('resize', initGraph);
</script>

<style>
  #research-svg {
    display: block;
    max-width: 100%;
    filter: drop-shadow(0 0 10px rgba(245, 158, 11, 0.05));
  }
  .node-group:hover circle {
    stroke: #fff;
    stroke-width: 2px;
    fill-opacity: 1;
  }
  .node-group:hover text {
    fill: #fff;
  }
</style>